{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
    },
  },
   "exclude": [
    "node_modules",
    "dist"
  ],
   "include": [
     "scripts",
     "utils",
     "__test__"
   ]
 }